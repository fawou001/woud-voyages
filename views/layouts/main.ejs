<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Woud Voyages</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Playfair Display', serif;
        }
        .gallery-image {
            transition: transform 0.3s ease;
        }
        .gallery-image:hover {
            transform: scale(1.05);
        }
        /* Police Nordic */
        @font-face {
            font-family: 'Nordic';
            src: url('/fonts/Nordic.ttf') format('truetype');
            font-weight: normal;
            font-style: normal;
        }
        .font-nordic {
            font-family: 'Nordic', 'Playfair Display', serif;
        }
        /* Police BucklaneScript */
        @font-face {
            font-family: 'BucklaneScript';
            src: url('/fonts/BucklaneScript.otf') format('opentype');
            font-weight: normal;
            font-style: normal;
        }
        .font-bucklane {
            font-family: 'BucklaneScript', 'Playfair Display', serif;
        }

        /* Police Allura */
        @font-face {
            font-family: 'Allura';
            src: url('/fonts/Allura-Regular.ttf') format('truetype');
            font-weight: normal;
            font-style: normal;
        }
        .font-allura {
            font-family: 'Allura', 'Playfair Display', serif;
        }

        /* Police Debby */
        @font-face {
            font-family: 'Debby';
            src: url('/fonts/Debby.otf') format('opentype');
            font-weight: normal;
            font-style: normal;
        }
        .font-debby {
            font-family: 'Debby', 'Playfair Display', serif;
        }

        /* Police Balqis */
        @font-face {
            font-family: 'Balqis';
            src: url('/fonts/Balqis.ttf') format('truetype');
            font-weight: normal;
            font-style: normal;
        }
        .font-balqis {
            font-family: 'Balqis', 'Playfair Display', serif;
        }

        /* Police Caveat */
        @font-face {
            font-family: 'Caveat';
            src: url('/fonts/Caveat-VariableFont_wght.ttf') format('truetype-variations');
            font-weight: 400 700;
            font-style: normal;
        }
        .font-caveat {
            font-family: 'Caveat', 'Playfair Display', serif;
        }

        /* Police Signika Negative */
        @font-face {
            font-family: 'Signika Negative';
            src: url('/fonts/SignikaNegative-VariableFont_wght.ttf') format('truetype-variations');
            font-weight: 300 700;
            font-style: normal;
        }
        .font-signika-negative {
            font-family: 'Signika Negative', 'Playfair Display', serif;
        }

        /* Animation pour le texte "Évadez-vous" lettre par lettre */
        @keyframes letterAppear {
            0% {
                transform: translateY(50px);
                opacity: 0;
            }
            100% {
                transform: translateY(0);
                opacity: 1;
            }
        }
        .letter-animation {
            display: inline-block;
            animation: letterAppear 1.5s ease-out forwards;
            opacity: 0;
        }
    </style>
</head>
<body class="bg-gray-50">
    <!-- En-tête -->
    <header class="bg-white shadow-md">
        <div class="container mx-auto px-4 py-4 flex justify-between items-center">
            <a href="/">
                <img src="/Woud_black.png" alt="Logo Woud" class="h-12 inline-block align-middle">
            </a>
            <a href="/admin/login" class="text-blue-600 hover:text-blue-800 font-semibold border border-blue-600 px-4 py-2 rounded transition duration-200">
                Connexion
            </a>
        </div>
    </header>

    <!-- Contenu principal -->
    <%- body %>

    <!-- Pied de page -->
    <footer class="bg-gray-800 text-white py-8">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div>
                    <h3 class="text-xl font-bold mb-4">Contact</h3>
                    <p>Email: contact@woud-voyages.com</p>
                    <p>Téléphone: +33 1 23 45 67 89</p>
                    <p>Adresse : 123 Avenue des Voyages, 75001 Paris</p>
                </div>
                <div>
                    <h3 class="text-xl font-bold mb-4">Liens utiles</h3>
                    <ul>
                        <li><a href="/" class="hover:text-blue-400">Accueil</a></li>
                        <li><a href="/destinations" class="hover:text-blue-400">Destinations</a></li>
                        <li><a href="/contact" class="hover:text-blue-400">Contact</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-xl font-bold mb-4">Suivez-nous</h3>
                    <div class="flex space-x-4">
                        <a href="#" class="hover:text-blue-400">Facebook</a>
                        <a href="#" class="hover:text-blue-400">Instagram</a>
                        <a href="#" class="hover:text-blue-400">Twitter</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Modal de réservation -->
    <div id="reservationModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center">
        <div class="bg-white p-8 rounded-lg max-w-md w-full mx-4">
            <h3 class="text-2xl font-bold mb-4">Réserver votre séjour</h3>
            <form id="reservationForm" class="space-y-4">
                <div>
                    <label class="block text-gray-700 mb-2">Nom complet</label>
                    <input type="text" class="w-full p-2 border rounded" required>
                </div>
                <div>
                    <label class="block text-gray-700 mb-2">Email</label>
                    <input type="email" class="w-full p-2 border rounded" required>
                </div>
                <div>
                    <label class="block text-gray-700 mb-2">Téléphone</label>
                    <input type="tel" class="w-full p-2 border rounded" required>
                </div>
                <div>
                    <label class="block text-gray-700 mb-2">Dates de séjour</label>
                    <input type="text" class="w-full p-2 border rounded" placeholder="JJ/MM/AAAA - JJ/MM/AAAA" required>
                </div>
                <div>
                    <label class="block text-gray-700 mb-2">Nombre de personnes</label>
                    <input type="number" class="w-full p-2 border rounded" min="1" required>
                </div>
                <div class="flex justify-end space-x-4">
                    <button type="button" onclick="closeReservationModal()" class="px-4 py-2 text-gray-600 hover:text-gray-800">Annuler</button>
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Confirmer</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function openReservationModal(hotelName) {
            document.getElementById('reservationModal').classList.remove('hidden');
            document.getElementById('reservationModal').classList.add('flex');
        }

        function closeReservationModal() {
            document.getElementById('reservationModal').classList.add('hidden');
            document.getElementById('reservationModal').classList.remove('flex');
        }

        document.getElementById('reservationForm').addEventListener('submit', function(e) {
            e.preventDefault();
            // Ici, vous pouvez ajouter la logique pour envoyer le formulaire
            alert('Votre demande de réservation a été envoyée !');
            closeReservationModal();
        });
    </script>
</body>
</html> 